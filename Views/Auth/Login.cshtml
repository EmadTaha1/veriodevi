@model VeriStore.Models.UserViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}
<h2 class="mb-4">Giriş Yap</h2>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
<form asp-action="Login" method="post" class="w-50 mx-auto">
    <div class="mb-3">
        <label asp-for="Email" class="form-label">E-posta</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Şifre</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Giriş Yap</button>
    <a href="@Url.Action("Register", "Auth")" class="btn btn-link">Yeni kullanıcı mısınız?</a>
</form>

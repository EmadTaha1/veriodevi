<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VeriStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VeriStore.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
          @if (Context.Session.GetInt32("UserId") != null)
                        {
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">Emad's DXN Store</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <form class="d-flex me-3" asp-controller="Urun" asp-action="Search" method="get">
                        <input class="form-control me-2" type="search" name="q" placeholder="Ürün ara..." aria-label="Search">
                        <button class="btn btn-outline-light" type="submit">Ara</button>
                    </form>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Urun" asp-action="Icecek">İçecekler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Urun" asp-action="Sampuan">Şampuanlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Urun" asp-action="Sabun">Sabunlar</a>
                        </li>
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Cart" asp-action="Index">Sepetim</a>
                            </li>
                            <li class="nav-item">
                                <span class="nav-link disabled">@Context.Session.GetString("UserEmail")</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Logout">Çıkış</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login">Giriş</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
          } else{

          }
                      
                            
                    
    </header>
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer mt-auto py-3 bg-dark text-white position-relative">
        <div class="container text-center">
            <span>İletişim: emadtaha260@gmail.com | +90 5364590787 </span>
            <div class="mt-2">
                <a href="#" class="text-white me-2"><i class="bi bi-facebook"></i></a>
                <a href="#" class="text-white me-2"><i class="bi bi-instagram"></i></a>
                <a href="#" class="text-white"><i class="bi bi-twitter"></i></a>
            </div>
            <div class="mt-2">
                &copy; 2025 Emad's DXN Store
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
